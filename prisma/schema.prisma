generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Investor {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  name     String
  password String
  tax_id   String  @unique
  wallet   Wallet?
}

model Wallet {
  id            Int                 @id @default(autoincrement())
  totalInvested Float
  active        Boolean?            @default(false)
  investor      Investor?           @relation(fields: [investorId], references: [id])
  investorId    Int                 @unique
  transactions  TransactionRecord[]
  assets        AssetWallet[]
}

model TransactionRecord {
  id       Int      @id @default(autoincrement())
  date     DateTime
  value    Boolean  @default(false)
  wallet   Wallet?  @relation(fields: [walletId], references: [id])
  walletId Int
}

model AssetWallet {
  id       Int      @id @default(autoincrement())
  assetId  Int
  walletId Int
  boughtAt DateTime
  soldAt   DateTime?
  profit   Float?
  quantity Int

  asset   Asset  @relation(fields: [assetId], references: [id])
  wallet  Wallet @relation(fields: [walletId], references: [id])

  orders  Order[]

  @@unique([assetId, walletId])
}

model Order {
  id            Int          @id @default(autoincrement())
  status        String
  price         Float
  quantity      Int
  assetWallet   AssetWallet  @relation(fields: [assetWalletId], references: [id])
  assetWalletId Int
}

model Asset {
  id             Int          @id @default(autoincrement())
  ticker         String
  volume         Int
  dailyVariation Float
  bbi            Float
  rsi            Int?
  scom           Float?
  sven           Float
  assetName      String
  type           String
  benchmark      String
  date           DateTime
  price          Float
  pl             Float
  macdim         Float
  macdis         Float
  macdh          Float
  bbs            Float
  bbl            Float
  bbm            Float
  rsicom         Float
  rsivem         Float

  assetWallets   AssetWallet[]
}
